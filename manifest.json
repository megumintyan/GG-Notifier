{
    "manifest_version": 2,
    "name": "GG Notifier",
    "version": "1.0.7",
    "default_locale": "en",
    "description": "__MSG_m8__",

    "homepage_url": "https://github.com/megumintyan/GG-Notifier",
    "icons": {
        "48": "icons/gg-48.png"
    },

    "options_ui": {
        "page": "popup/popup.html",
        "chrome_style": true
    },
    
    "permissions": [
        "storage",
        "*://goodgame.ru/*",
        "notifications"
    ],

    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    
    "browser_action": {
        "default_icon": "icons/gg-32.png",
        "default_title": "GG Notifier",
        "default_popup": "popup/popup.html"
    }

}
